{
  "compilerOptions": {
    "module": "commonjs",
    "lib": ["es2017"],
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "noImplicitAny": false,
    "noLib": false,
    "strict": true,
    "strictPropertyInitialization": false,
    "allowSyntheticDefaultImports": true
  },
  "exclude": ["node_modules", "dist"]
}
